<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorApp.RegisterPage"
             Title="Kayıt Ol">
    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Kullanıcı Adı" HorizontalOptions="Center"/>
        <Entry x:Name="NewUsernameEntry" Placeholder="Kullanıcı adınızı girin" WidthRequest="300" HeightRequest="50"/>

        <Label Text="Şifre" HorizontalOptions="Center"/>
        <Entry x:Name="NewPasswordEntry" Placeholder="Şifrenizi girin" IsPassword="True" WidthRequest="300" HeightRequest="50"/>

        <Button Text="Kayıt Ol" Clicked="OnRegisterClicked" WidthRequest="200" HeightRequest="50"/>
    </VerticalStackLayout>
</ContentPage>
