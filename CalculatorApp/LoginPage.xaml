<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorApp.LoginPage"
             Title="Giriş Yap">
    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Kullanıcı Adı" HorizontalOptions="Center"/>
        <Entry x:Name="UsernameEntry" Placeholder="Kullanıcı adınızı girin" WidthRequest="300" HeightRequest="50"/>

        <Label Text="Şifre" HorizontalOptions="Center"/>
        <Entry x:Name="PasswordEntry" Placeholder="Şifrenizi girin" IsPassword="True" WidthRequest="300" HeightRequest="50"/>

        <Button Text="Giriş Yap" Clicked="OnLoginClicked" WidthRequest="200" HeightRequest="50" />

        <Button Text="Kayıt Ol" Clicked="OnRegisterClicked" WidthRequest="200" HeightRequest="50"/>
    </VerticalStackLayout>
</ContentPage>
